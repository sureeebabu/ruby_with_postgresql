
<div class="container">
<div class="modal-content">
  <%= form_for @product, url: {action: :create} do |f| %>
      <div class="modal-header">
        <h4 class="modal-title">Add a Product</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= "<div class=\"alert alert-danger\">
          #{@product.errors.full_messages.first}</div>".html_safe if @product.errors.any? %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <label class="control-label">Product Name</label>
              <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Product" %>
            </div>

            <div class="col-md-4">
              <label class="control-label">Price</label>
              <%= f.text_field :price, :class => "form-control", :placeholder => "Enter Product Price" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label class="control-label">Short Description</label>
              <%= f.text_field :short_description, :class => "form-control" , :placeholder => "Enter Short Description" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label class="control-label">Full Description</label>
              <%= f.text_area :full_description, :rows => 5, :class => "form-control", :placeholder => "Enter Full Description" %>
            </div>
          </div>
        </div>

        </p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Back', { controller: 'products', action: 'index'}, class: 'btn btn-default'%>
        <%= f.submit 'Create Product', :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>

</div>